---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const allProyectos = await getCollection('proyectos');
---

<Layout title="Proyectos - FCI">
  <div class="container mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold mb-8">Proyectos</h1>
    <div class="grid gap-8">
      {allProyectos.map(proyecto => (
        <a href={`/proyectos/${proyecto.slug}`} class="block bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow">
          <h2 class="text-2xl font-bold text-primary mb-2">{proyecto.data.nombre}</h2>
          <p class="text-gray-600">{proyecto.data.descripcion}</p>
        </a>
      ))}
    </div>
  </div>
</Layout>

<style>
  .text-primary {
    color: #32a470;
  }
</style>
